<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
        <TableRow>
                <ImageView
                    android:id="@+id/imgDrug"
                    android:layout_width="@dimen/user_medicine_button_padding"
                    android:layout_height="@dimen/user_medicine_button_padding"
                    android:contentDescription="@string/description_drugs" />

                <TextView
                    android:id="@+id/drugItem"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/user_medicine_button_padding"
                    android:textColor="@color/golden_brown"
                    android:textSize="@dimen/info_layout_margin_left_right"
                    android:padding="@dimen/layout_margin"/>

        </TableRow>
</TableLayout>
