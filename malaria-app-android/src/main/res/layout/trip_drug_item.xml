<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
        <TableRow>
                <ImageView
                    android:id="@+id/imgDrug"
                    android:layout_width="@dimen/trip_drug_item_imgview_width"
                    android:layout_height="@dimen/trip_drug_item_imgview_height"/>

                <TextView
                    android:id="@+id/drugItem"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/trip_drug_item_tv_height"
                    android:textColor="@color/golden_brown"
                    android:textSize="@dimen/trip_drug_item_tv_textsize"
                    android:padding="@dimen/trip_drug_item_tv_padding"/>

        </TableRow>
</TableLayout>
