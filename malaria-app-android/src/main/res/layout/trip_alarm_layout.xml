<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    tools:context=".code.activities.TripIndicatorFragmentActivity"
    android:id="@+id/relativeLayout1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trip Checklist Reminder"
            android:textColor="@color/golden_brown"
            android:textSize="@dimen/text_size_25sp"
            android:gravity="center"
            android:background="@color/lightest_brown"
            android:padding="@dimen/padding_10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tripRemindingItems"
            android:textColor="@color/golden_brown"
            android:textSize="@dimen/text_size_20sp"
            android:text="hi"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/relativeLayout"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/info_hub_button"
            android:text="Clear"
            android:id="@+id/reminderOK"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginBottom="@dimen/margin_20dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/info_hub_button"
            android:text="Snooze"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/reminderCancel"
            android:textColor="@color/white"
            android:padding="@dimen/padding_5dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_20dp" />

    </RelativeLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_220dp"
        android:headerDividersEnabled="true"
        android:divider="#ff988455"
        android:dividerHeight="@dimen/height_1dp"
        android:layout_above="@+id/relativeLayout"
        android:layout_below="@+id/linearLayout2" />

</RelativeLayout>