<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_ground"
    android:layout_gravity="center_horizontal"

    >

    <ScrollView android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollSegment"
        android:layout_weight="1"
        >
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/upperLayout"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/info_hub_settings_button"
                    android:layout_width="@dimen/info_layout_button"
                    android:layout_height="@dimen/info_layout_button"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/layout_margin_small"
                    android:adjustViewBounds="true"

                    android:background="@drawable/settings_normal"
                    android:scaleType="fitCenter" />

                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/peace_corps_logo_normal"
                        android:contentDescription="@string/description_peace_corps_logo"
                        />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info_hub_title_label"
                        android:id="@+id/ih"
                        android:textColor="@color/golden_brown"
                        android:textSize="@dimen/info_textSize"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/layout_margin"
                        android:layout_marginLeft="@dimen/layout_margin"

                        />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                android:layout_height="@dimen/info_layout_height"
                android:id="@+id/firstButtonSet"
                android:orientation="horizontal"

                >
                <Button android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/peace_corps_policy"
                    android:background="@drawable/info_hub_button"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:padding="@dimen/info_padding"
                    android:id="@+id/btnPeaceCorpsPolicy"
                    android:layout_marginLeft="@dimen/info_layout_margin_left_right"
                    android:layout_marginRight="@dimen/info_layout_margin_left_right"
                    android:layout_marginTop="@dimen/info_layout_margin_top" />

                <Button android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/percentage_of_side_effects"
                    android:background="@drawable/info_hub_button"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:padding="@dimen/info_padding"
                    android:id="@+id/btnPercentSideEffects"
                    android:layout_marginLeft="@dimen/info_layout_margin_left_right"
                    android:layout_marginRight="@dimen/info_layout_margin_left_right"
                    android:layout_marginTop="@dimen/info_layout_margin_top" />



            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                android:layout_height="110dp"
                android:id="@+id/secondButtonSet"
                android:orientation="horizontal"
                android:layout_below="@+id/firstButtonSet">
                <Button android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/side_effects_reported_by_PCVs"
                    android:background="@drawable/info_hub_button"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:padding="@dimen/info_padding"
                    android:id="@+id/btnSideEffectsPCV"
                    android:layout_marginLeft="@dimen/info_layout_margin_left_right"
                    android:layout_marginRight="@dimen/info_layout_margin_left_right"
                    android:layout_marginTop="@dimen/info_layout_margin_top" />

                <Button android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/non_PCV_reported_side_effects"
                    android:background="@drawable/info_hub_button"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:padding="@dimen/info_padding"
                    android:id="@+id/btnSideEffectsNPCV"
                    android:layout_marginLeft="@dimen/info_layout_margin_left_right"
                    android:layout_marginRight="@dimen/info_layout_margin_left_right"
                    android:layout_marginTop="@dimen/info_layout_margin_top" />





            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="110dp"
                android:id="@+id/thirdButtonSet"
                android:orientation="horizontal"
                android:layout_below="@+id/secondButtonSet">
                <Button android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/volunteer_adherence_rates"
                    android:background="@drawable/info_hub_button"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:padding="@dimen/info_padding"
                    android:id="@+id/btnVolunteerAdherence"
                    android:layout_marginLeft="@dimen/info_layout_margin_left_right"
                    android:layout_marginRight="@dimen/info_layout_margin_left_right"
                    android:layout_marginTop="@dimen/info_layout_margin_top"/>

                <Button android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/effectiveness_against_malaria"
                    android:background="@drawable/info_hub_button"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:padding="@dimen/info_padding"
                    android:id="@+id/btnEffectiveness"
                    android:layout_marginLeft="@dimen/info_layout_margin_left_right"
                    android:layout_marginRight="@dimen/info_layout_margin_left_right"
                    android:layout_marginTop="@dimen/info_layout_margin_top" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/LinearLayout_margin_top"
        android:paddingBottom="@dimen/LinearLayout_padding_bottom"



        >

        <Button
            android:id="@+id/homeButton"

            android:background="@drawable/home_icon_normal"
            android:layout_width="@dimen/home_layout"
            android:layout_height="@dimen/home_layout"
            android:adjustViewBounds="true"
            android:layout_marginRight="@dimen/layout_margin_right_left"
            android:scaleType="fitCenter"

            />

        <Button
            android:background="@drawable/bus_icon_inactive_normal"
            android:layout_width="@dimen/bus_width"
            android:layout_height="@dimen/home_layout"
            android:adjustViewBounds="true"
            android:layout_marginLeft="@dimen/layout_margin_top_bottom"
            android:layout_marginRight="@dimen/layout_margin_top_bottom"
            android:scaleType="fitCenter"
            android:id="@+id/tripButton"

            />

        <Button
            android:id="@+id/infoButton"
            android:layout_width="@dimen/bus_width"
            android:layout_height="@dimen/home_layout"
            android:layout_marginLeft="@dimen/layout_margin_right_left"
            android:adjustViewBounds="true"
            android:background="@drawable/info_hub_inactive_normal"
            android:scaleType="fitCenter" />
        <Button
            android:background="@drawable/cal_right_arrow_brown"
            android:id="@+id/tempButton"
            android:layout_width="@dimen/arrow_layout"
            android:layout_height="@dimen/arrow_layout"
            android:adjustViewBounds="true"
            android:layout_marginLeft="@dimen/layout_margin_right_left"
            android:scaleType="fitCenter"
            />
        <Button
            android:background="@drawable/user"
            android:id="@+id/userProfile"
            android:layout_width="@dimen/user_layout"
            android:layout_height="@dimen/user_layout"
            android:adjustViewBounds="true"
            android:layout_marginLeft="@dimen/layout_margin_right_left"
            android:scaleType="fitCenter"
            />
    </LinearLayout>
</LinearLayout>
