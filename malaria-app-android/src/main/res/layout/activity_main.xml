<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/back_ground"
    android:layout_gravity="center"

    >


    <android.support.v4.view.ViewPager

        android:id="@+id/vPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />


    <com.viewpagerindicator.CirclePageIndicator

        android:id="@+id/vIndicator"
        android:padding="@dimen/circle_page_indicator_padding"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#2FB3E3"

        app:footerLineHeight="1dp"
        app:footerIndicatorHeight="3dp"
        app:footerIndicatorStyle="underline"
        app:selectedColor="#FFFFFF"
        app:selectedBold="true"
        />



    <View
        android:layout_height="@dimen/activity_main_view_height"
        android:layout_width="@dimen/activity_main_view_width"
        android:background="#000000"
        android:layout_gravity="center_horizontal"

        />

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_main_linear_layout_margin_top"
        android:paddingBottom="@dimen/activity_main_linear_layout_padding_bottom"



        >

        <Button
            android:id="@+id/homeButton"

            android:background="@drawable/home_icon_normal"
            android:layout_width="@dimen/activity_main_home_button_width"
            android:layout_height="@dimen/activity_main_home_button_height"
            android:adjustViewBounds="true"
            android:layout_marginRight="@dimen/activity_main_home_button_margin_right"
            android:scaleType="fitCenter"

            />

        <Button
            android:background="@drawable/bus_icon_inactive_normal"
            android:layout_width="@dimen/activity_main_bus_icon_button_width"
            android:layout_height="@dimen/activity_main_bus_icon_button_height"
            android:adjustViewBounds="true"
            android:layout_marginLeft="@dimen/activity_main_bus_icon_button_margin_left"
            android:layout_marginRight="@dimen/activity_main_bus_icon_button_margin_right"
            android:scaleType="fitCenter"
            android:id="@+id/tripButton"

            />

        <Button
            android:background="@drawable/info_hub_inactive_normal"
            android:id="@+id/infoButton"
            android:layout_width="@dimen/activity_main_info_button_width"
            android:layout_height="@dimen/activity_main_info_button_height"
            android:adjustViewBounds="true"
            android:layout_marginLeft="@dimen/activity_main_info_button_margin_left"
            android:scaleType="fitCenter"
            />
        <Button
            android:background="@drawable/cal_right_arrow_brown"
            android:id="@+id/tempButton"
            android:layout_width="@dimen/activity_main_right_arrow_width"
            android:layout_height="@dimen/activity_main_right_arrow_height"
            android:adjustViewBounds="true"
            android:layout_marginLeft="@dimen/activity_main_right_arrow_margin_left"
            android:scaleType="fitCenter"
            />
        <Button
            android:background="@drawable/user"
            android:id="@+id/userProfile"
            android:layout_width="@dimen/activity_main_user_width"
            android:layout_height="@dimen/activity_main_user_height"
            android:layout_marginLeft="@dimen/activity_main_user_margin_left"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            />
    </LinearLayout>
</LinearLayout>
