<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/back_ground"
    android:layout_gravity="center"

    >


    <android.support.v4.view.ViewPager

        android:id="@+id/vPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />


    <com.viewpagerindicator.CirclePageIndicator

        android:id="@+id/vIndicator"
        android:padding="10dip"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/view_pager_indicator_text_color"

        app:footerLineHeight="1dp"
        app:footerIndicatorHeight="3dp"
        app:footerIndicatorStyle="underline"
        app:selectedColor="@color/white"
        app:selectedBold="true"
        />



    <View
        android:layout_height="@dimen/view_layout_height"
        android:layout_width="@dimen/view_layout_width"
        android:background="@color/black"
        android:layout_gravity="center_horizontal"

        />

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/LinearLayout_margin_top"
        android:paddingBottom="@dimen/LinearLayout_padding_bottom"



        >

        <Button
            android:id="@+id/homeButton"

            android:background="@drawable/home_icon_normal"
            android:layout_width="@dimen/home_layout"
            android:layout_height="@dimen/home_layout"
            android:adjustViewBounds="true"
            android:layout_marginRight="@dimen/layout_margin_right_left"
            android:scaleType="fitCenter"

            />

        <Button
            android:background="@drawable/bus_icon_inactive_normal"
            android:layout_width="@dimen/bus_width"
            android:layout_height="@dimen/home_layout"
            android:adjustViewBounds="true"
            android:layout_marginLeft="@dimen/layout_margin_top_bottom"
            android:layout_marginRight="@dimen/layout_margin_top_bottom"
            android:scaleType="fitCenter"
            android:id="@+id/tripButton"

            />

        <Button
            android:id="@+id/infoButton"
            android:layout_width="@dimen/bus_width"
            android:layout_height="@dimen/home_layout"
            android:layout_marginLeft="@dimen/layout_margin_right_left"
            android:adjustViewBounds="true"
            android:background="@drawable/info_hub_inactive_normal"
            android:scaleType="fitCenter" />
        <Button
            android:background="@drawable/cal_right_arrow_brown"
            android:id="@+id/tempButton"
            android:layout_width="@dimen/arrow_layout"
            android:layout_height="@dimen/arrow_layout"
            android:adjustViewBounds="true"
            android:layout_marginLeft="@dimen/layout_margin_right_left"
            android:scaleType="fitCenter"
            />
        <Button
            android:background="@drawable/user"
            android:id="@+id/userProfile"
            android:layout_width="@dimen/user_layout"
            android:layout_height="@dimen/user_layout"
            android:adjustViewBounds="true"
            android:layout_marginLeft="@dimen/layout_margin_right_left"
            android:scaleType="fitCenter"
            />
    </LinearLayout>
</LinearLayout>
