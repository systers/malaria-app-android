            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/reset_dialog_linearlayout_marginbottom"
                android:layout_marginTop="@dimen/reset_dialog_linearlayout_margintop">

                <Button
                    android:id="@+id/dialogButtonOKReset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="YES"
                    android:background="@drawable/info_hub_button"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_columnSpan="8"
                    android:layout_marginLeft="@dimen/reset_dialog_yesbutton_marginleft"
                    android:layout_alignTop="@+id/dialogButtonCancel"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="@dimen/reset_dialog_yesbutton_marginright"/>

                <Button
                    android:id="@+id/dialogButtonCancelReset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:background="@drawable/info_hub_button"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/reset_dialog_cancelbutton_marginleft"
                    android:layout_marginRight="@dimen/reset_dialog_cancelbutton_marginright"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </LinearLayout>
        </LinearLayout>


</RelativeLayout>