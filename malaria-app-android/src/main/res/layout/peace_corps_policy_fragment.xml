<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/back_ground"
              android:layout_gravity="center_horizontal"
              android:layout_width="match_parent"
              android:padding="@dimen/peace_corps_policy_fragment_linearlayout_padding"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Peace Corps Policy"
            android:textColor="@color/golden_brown"
            android:textSize="@dimen/peace_corps_policy_fragment_tv_textsize"
            android:gravity="center"
            android:layout_weight="0.94"
            android:textStyle="bold"
            android:id="@+id/pcp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/peace_corps_policy_fragment_button_height"
            android:id="@+id/ttsButton"
            android:layout_weight="0.06"
            android:background="@drawable/ic_action_volume_on" />
    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="@dimen/peace_corps_policy_fragment_view_height"
            android:background="@color/black"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                >


        <TextView android:layout_width="match_parent"
              android:padding="@dimen/peace_corps_policy_fragment_tv_padding"
              android:text="@string/dump_test"
              android:textColor="@color/black"
              android:textSize="@dimen/peace_corps_policy_fragment_tv_text_size"
              android:layout_height="wrap_content"
              android:id="@+id/peaceCorpsPolicyLabel"
            />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
