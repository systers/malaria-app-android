<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="January"
        android:id="@+id/firstMonthProgressLabel"
        android:textStyle="bold"
        android:textColor="@color/golden_brown"
        android:textSize="18sp"/>

    <ProgressBar android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="100"
        android:progressDrawable="@drawable/saf_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/firstMonthProgressBar"
        android:background="@drawable/progress_bg"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:onClick="sendMonth"
        android:layout_toLeftOf="@+id/firstMonthProgressPercent"
        android:layout_alignTop="@id/firstMonthProgressLabel"
        android:layout_alignBottom="@id/firstMonthProgressLabel"
        android:layout_alignLeft="@+id/secondMonthProgressBar"
        android:layout_alignStart="@+id/secondMonthProgressBar" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100%"
        android:id="@+id/firstMonthProgressPercent"
        android:textStyle="bold"
        android:textColor="@color/golden_brown"
        android:textSize="18sp"
        android:gravity="end"
        android:layout_alignParentRight="true"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="February"
        android:layout_weight="1"
        android:id="@+id/secondMonthProgressLabel"
        android:textStyle="bold"
        android:textColor="@color/golden_brown"
        android:textSize="18sp"
        android:layout_below="@id/firstMonthProgressLabel" />

    <ProgressBar android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="60"
        android:progressDrawable="@drawable/saf_progress_bar"
        android:id="@+id/secondMonthProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:background="@drawable/progress_bg"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:onClick="sendMonth"
        android:layout_below="@id/firstMonthProgressBar"
        android:layout_toRightOf="@id/secondMonthProgressLabel"
        android:layout_alignTop="@id/secondMonthProgressLabel"
        android:layout_alignBottom="@id/secondMonthProgressLabel"
        android:layout_toStartOf="@+id/firstMonthProgressPercent"
        android:layout_toLeftOf="@+id/firstMonthProgressPercent" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60%"
        android:id="@+id/secondMonthProgressPercent"
        android:textStyle="bold"
        android:textColor="@color/golden_brown"
        android:textSize="18sp"
        android:gravity="end"
        android:layout_alignParentRight="true"
        android:layout_below="@id/firstMonthProgressLabel" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="March"
        android:id="@+id/thirdMonthProgressLabel"
        android:textStyle="bold"
        android:textColor="@color/golden_brown"
        android:textSize="18sp"
        android:layout_below="@id/secondMonthProgressLabel" />

    <ProgressBar android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/saf_progress_bar"
        android:progress="80"
        android:id="@+id/thirdMonthProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:background="@drawable/progress_bg"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:onClick="sendMonth"
        android:layout_below="@id/secondMonthProgressBar"
        android:layout_alignTop="@id/thirdMonthProgressLabel"
        android:layout_alignBottom="@id/thirdMonthProgressLabel"
        android:layout_alignLeft="@+id/secondMonthProgressBar"
        android:layout_alignStart="@+id/secondMonthProgressBar"
        android:layout_alignRight="@+id/firstMonthProgressBar"
        android:layout_alignEnd="@+id/firstMonthProgressBar" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80%"
        android:id="@+id/thirdMonthProgressPercent"
        android:textStyle="bold"
        android:textColor="@color/golden_brown"
        android:textSize="18sp"
        android:gravity="end"
        android:layout_below="@id/secondMonthProgressPercent"
        android:layout_alignParentRight="true" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="April"
        android:id="@+id/fourthMonthProgressLabel"
        android:textStyle="bold"
        android:textColor="@color/golden_brown"
        android:textSize="18sp"
        android:layout_below="@id/thirdMonthProgressLabel" />

    <ProgressBar android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="80"
        android:progressDrawable="@drawable/saf_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/fourthMonthProgressBar"
        android:background="@drawable/progress_bg"
        android:onClick="sendMonth"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_below="@id/thirdMonthProgressBar"
        android:layout_alignTop="@id/fourthMonthProgressLabel"
        android:layout_alignBottom="@id/fourthMonthProgressLabel"
        android:layout_alignLeft="@+id/thirdMonthProgressBar"
        android:layout_alignStart="@+id/thirdMonthProgressBar"
        android:layout_alignRight="@+id/firstMonthProgressBar"
        android:layout_alignEnd="@+id/firstMonthProgressBar" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80%"
        android:id="@+id/fourthMonthProgressPercent"
        android:textStyle="bold"
        android:textColor="@color/golden_brown"
        android:textSize="18sp"
        android:gravity="end"
        android:layout_below="@id/thirdMonthProgressPercent"
        android:layout_alignParentRight="true" />
</RelativeLayout>
