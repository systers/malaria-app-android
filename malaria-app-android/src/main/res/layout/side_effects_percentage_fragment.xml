<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/back_ground"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:padding="@dimen/side_effects_percentage_linearlayout_padding"
    android:layout_height="match_parent">




    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Percentage Side Effects"
        android:textColor="@color/golden_brown"
        android:textSize="@dimen/side_effects_percentage_tv_textsize"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/pse"
        />
    <View android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/black"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView android:layout_width="match_parent"
                android:padding="@dimen/side_effects_percentage_tv_padding"
                android:text="@string/dump_test"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:id="@+id/percentSideEffectsLabel"
                android:textSize="@dimen/side_effects_percentage_tv_text_size"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/side_effects_percentage_imgview_height"
                android:id="@+id/percent_side_effect_image"
                android:layout_gravity="center_horizontal"
                android:background="@color/back_ground"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>