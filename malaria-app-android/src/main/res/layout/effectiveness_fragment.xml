<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/back_ground"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:padding="@dimen/effectiveness_fragment_linearlayout_padding"
    android:layout_height="match_parent">




    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Effectiveness Against Malaria"
        android:textColor="@color/golden_brown"
        android:textSize="@dimen/effectiveness_fragment_tv_textsize"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/eam"

        />
    <View android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/black"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView android:layout_width="match_parent"
                android:padding="@dimen/effectiveness_fragment_tv_padding"
                android:text="@string/dump_test"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:id="@+id/effectivenessLabel"
                android:textSize="@dimen/effectiveness_fragment_tv_text_size"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/effectiveness_fragment_imageview_height"
                android:id="@+id/effectiveness_image"
                android:layout_gravity="center_horizontal"
                android:background="@color/back_ground"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>