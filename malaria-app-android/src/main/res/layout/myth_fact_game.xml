<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:background="@color/back_ground"
    android:padding="@dimen/mythfactgame_linearlayout_padding">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center_vertical">
            <Button
                android:layout_width="0dp"
                android:layout_height="@dimen/exit_button_height"
                android:id="@+id/exitBtn"
                android:layout_gravity="right"
                android:layout_weight="0.4"
                android:background="@drawable/info_hub_button"
                android:textColor="@color/white"
                android:text="Exit"
                android:onClick="exitGame"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/userCoins"
                android:textSize="@dimen/mythfactgame_textview_size"
                android:textStyle="bold"
                android:layout_weight="1.2"
                android:text="6"
                android:gravity="center_horizontal"
                android:textColor="@color/golden_brown"/>


                <Button
                    android:layout_width="0dp"
                    android:layout_height="@dimen/next_button_height"
                    android:id="@+id/nextBtn"
                    android:layout_weight="0.4"
                    android:background="@drawable/info_hub_button"
                    android:textColor="@color/white"
                    android:text="Next"
                    android:onClick="nextClick"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="@dimen/mythfactgame_textview_width"
                android:layout_height="wrap_content"
                android:padding="@dimen/mythfactgame_textview_padding"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/mythfactgame_textview_margin_bottom"
                android:id="@+id/question"
                android:textSize="@dimen/mythfactgame_textview_textsize"
                android:text="Question Here"
                android:background="@drawable/achievement_button"
                android:textColor="@color/golden_brown"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"></LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/chest"
            android:gravity="center"
            android:layout_weight="0.8"
            android:layout_marginTop="@dimen/mythfactgame_chest_tv_margin_top"
            android:textStyle="bold"
            android:textSize="@dimen/mythfactgame_chest_tv_size"
            android:background="@drawable/chest" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/trash"
            android:textStyle="bold"
            android:textSize="@dimen/mythfactgame_trash_tv_size"
            android:layout_weight="1"
            android:background="@drawable/trash"/>
    </LinearLayout>

</LinearLayout>