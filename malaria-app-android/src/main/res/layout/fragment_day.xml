<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground"
    android:id="@+id/layout_day">



    <LinearLayout
        android:id="@+id/heading_day"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fragment_day_linearlayout_height"
        android:gravity="left|top"
        android:height="@dimen/fragment_day_linearlayout_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dayDB"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/fragment_day_tv_height"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/golden_brown"
            android:textStyle="bold"
            android:textSize="@dimen/fragment_day_tv_textsize">
        </TextView>

        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/fragment_day_imageview_width"
            android:layout_height="@dimen/fragment_day_imageview_height"
            android:adjustViewBounds="true"
            android:background="@drawable/drug_normal"
            android:scaleType="fitCenter"
            android:padding="@dimen/fragment_day_imageview_padding"
            android:layout_margin="@dimen/fragment_day_imageview_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Drug:"
            android:layout_margin="@dimen/fragment_day_tv_margin"
            android:padding="@dimen/fragment_day_tv_padding"
            android:textSize="@dimen/fragment_day_tv_text_size"
            android:textStyle="bold"
            android:textColor="@color/golden_brown"/>

        <TextView
            android:id="@+id/drugID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/fragment_day_tv_padding_left"
            android:paddingRight="@dimen/fragment_day_tv_padding_right"
            android:paddingTop="@dimen/fragment_day_tv_padding"
            android:layout_margin="@dimen/fragment_day_text_view_margin"
            android:text="..."
            android:textSize="@dimen/fragment_day_tv_text_size"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/info_hub_button"

            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/fragment_day_imageview_width"
            android:layout_height="@dimen/fragment_day_imageview_height"
            android:adjustViewBounds="true"
            android:background="@drawable/doses_missing_image_normal"
            android:scaleType="fitCenter"
            android:padding="@dimen/fragment_day_imageview_padding"
            android:layout_margin="@dimen/fragment_day_imageview_margin"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/fragment_day_tv_padding_left"
            android:paddingRight="@dimen/fragment_day_tv_padding_right"
            android:text="Taken:"
            android:textSize="@dimen/fragment_day_tv_text_size"
            android:textColor="@color/golden_brown"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fragment_day_image_view_margin"/>


        <ImageView
            android:layout_width="@dimen/fragment_day_image_view_width"
            android:layout_height="@dimen/fragment_day_image_view_height"
            android:background="@drawable/accept_medi_grayscale"
            android:layout_marginTop="@dimen/fragment_day_image_view_margin"
            android:id="@+id/medi_indicator" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.29"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="@dimen/fragment_day_image_view_width"
            android:layout_height="@dimen/fragment_day_image_view_height"
            android:src="@drawable/edit_pure_white"
            android:background="@drawable/roundedbutton"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/fragment_day_image_button_margin_bottom"
            android:layout_marginRight="@dimen/fragment_day_image_button_margin_right"
            android:id="@+id/btnChangeData" />

            </LinearLayout>


</LinearLayout>