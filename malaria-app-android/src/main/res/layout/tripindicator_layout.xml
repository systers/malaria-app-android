<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground"
    >

    <ScrollView android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollSegmentTrip"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/upperLayout"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/trip_settings_button"
                    android:layout_width="@dimen/info_layout_button"
                    android:layout_height="@dimen/info_layout_button"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/layout_margin_small"
                    android:adjustViewBounds="true"
                    android:background="@drawable/settings_normal"
                    android:scaleType="fitCenter" />

                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/peace_corps_logo_normal"
                        android:contentDescription="@string/description_peace_corps_logo"/>

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plan_my_trip_label"
                        android:textColor="@color/golden_brown"
                        android:textSize="@dimen/textSize_medium2"
                        android:textStyle="bold"
                        android:id="@+id/pmt"
                        android:layout_marginTop="@dimen/layout_margin"
                        android:layout_marginLeft="@dimen/layout_margin"

                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location_label"
                    android:textColor="@color/golden_brown"
                    android:textSize="@dimen/textSize_medium"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/button_margin"
                    android:layout_marginTop="@dimen/home_layout"
                    />


                <AutoCompleteTextView
                    android:id="@+id/trip_location_select_editText"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/bus_width"
                    android:layout_marginTop="@dimen/button_margin"
                    android:paddingLeft="@dimen/layout_margin"
                    android:background="@drawable/trip_cash_editext"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:textSize="15sp"
                    android:hint="Enter Location"
                    android:paddingBottom="@dimen/layout_margin_small"
                    android:paddingTop="@dimen/layout_margin_small"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:completionThreshold="1"



                    />

                <ImageView
                    android:layout_width="@dimen/home_layout"
                    android:layout_height="@dimen/home_layout"
                    android:background="@drawable/location_trip"
                    android:layout_marginTop="@dimen/button_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:id="@+id/locationHistory"
                    android:clickable="true"
                    android:contentDescription="@string/description_previous_locations"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departure Date:"
                    android:textColor="@color/golden_brown"
                    android:textSize="@dimen/trip_text"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/button_margin"
                    android:layout_marginTop="@dimen/home_layout"/>


                <TextView
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="@dimen/bus_width"
                    android:layout_height="@dimen/bus_width"
                    android:hint="MM"
                    android:layout_marginTop="@dimen/button_margin"
                    android:paddingLeft="@dimen/trip_padding_left"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:textSize="@dimen/badge_margin"
                    android:paddingTop="@dimen/layout_margin"
                    android:paddingBottom="@dimen/layout_margin_small"
                    android:textColor="@color/white"
                    android:background="@drawable/trip_cash_editext"
                    android:id="@+id/trip_month_departure"
                    android:layout_marginRight="@dimen/trip_padding_left"
                    android:clickable="true"
                    android:onClick="showDatePickerDialogDeparture"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="@color/golden_brown"
                    android:layout_marginTop="@dimen/button_margin"
                    android:textSize="@dimen/trip_text"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="@dimen/bus_width"
                    android:layout_height="@dimen/bus_width"
                    android:hint="DD"
                    android:layout_marginTop="@dimen/button_margin"
                    android:paddingLeft="@dimen/trip_padding_left"
                    android:paddingTop="@dimen/layout_margin"
                    android:layout_marginLeft="2dp"
                    android:textSize="@dimen/badge_margin"
                    android:paddingBottom="@dimen/layout_margin_small"
                    android:layout_marginRight="@dimen/trip_padding_left"
                    android:textColor="@color/white"
                    android:background="@drawable/trip_cash_editext"
                    android:id="@+id/trip_date_departure"
                    android:clickable="true"
                    android:onClick="showDatePickerDialogDeparture"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="@color/golden_brown"
                    android:layout_marginTop="@dimen/button_margin"
                    android:textSize="@dimen/trip_text"
                    android:textStyle="bold"
                    />


                <TextView
                    android:layout_width="@dimen/bus_width"
                    android:layout_height="@dimen/bus_width"
                    android:hint="YY"
                    android:layout_marginTop="@dimen/button_margin"
                    android:paddingLeft="@dimen/trip_padding_left"
                    android:layout_marginLeft="@dimen/trip_padding_left"
                    android:textSize="@dimen/badge_margin"
                    android:paddingTop="@dimen/layout_margin"
                    android:paddingBottom="@dimen/layout_margin_small"
                    android:textColor="@color/white"
                    android:background="@drawable/trip_cash_editext"
                    android:id="@+id/trip_year_departure"
                    android:clickable="true"
                    android:onClick="showDatePickerDialogDeparture"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrival Date:"
                    android:textColor="@color/golden_brown"
                    android:textSize="@dimen/trip_text"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/button_margin"
                    android:layout_marginTop="@dimen/home_layout"/>

                <TextView
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="@dimen/bus_width"
                    android:layout_height="@dimen/bus_width"
                    android:hint="MM"
                    android:layout_marginTop="@dimen/button_margin"
                    android:paddingLeft="@dimen/trip_padding_left"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:textSize="@dimen/badge_margin"
                    android:paddingTop="@dimen/layout_margin"
                    android:paddingBottom="@dimen/layout_margin_small"
                    android:textColor="@color/white"
                    android:background="@drawable/trip_cash_editext"
                    android:id="@+id/trip_month"
                    android:layout_marginRight="@dimen/trip_padding_left"
                    android:clickable="true"
                    android:onClick="showDatePickerDialogArrival"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="@color/golden_brown"
                    android:layout_marginTop="@dimen/button_margin"
                    android:textSize="@dimen/trip_text"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="@dimen/bus_width"
                    android:layout_height="@dimen/bus_width"
                    android:hint="DD"
                    android:layout_marginTop="@dimen/button_margin"
                    android:paddingLeft="@dimen/trip_padding_left"
                    android:layout_marginLeft="2dp"
                    android:textSize="@dimen/badge_margin"
                    android:paddingBottom="@dimen/layout_margin_small"
                    android:paddingTop="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/trip_padding_left"
                    android:textColor="@color/white"
                    android:background="@drawable/trip_cash_editext"
                    android:id="@+id/trip_date"
                    android:clickable="true"
                    android:onClick="showDatePickerDialogArrival"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="@color/golden_brown"
                    android:layout_marginTop="@dimen/button_margin"
                    android:textSize="@dimen/trip_text"
                    android:textStyle="bold"
                    />


                <TextView
                    android:layout_width="@dimen/bus_width"
                    android:layout_height="@dimen/bus_width"
                    android:hint="YY"
                    android:layout_marginTop="@dimen/button_margin"
                    android:paddingLeft="@dimen/trip_padding_left"
                    android:layout_marginLeft="@dimen/trip_padding_left"
                    android:textSize="@dimen/badge_margin"
                    android:paddingBottom="@dimen/layout_margin_small"
                    android:paddingTop="@dimen/layout_margin"
                    android:textColor="@color/white"
                    android:background="@drawable/trip_cash_editext"
                    android:id="@+id/trip_year"
                    android:clickable="true"
                    android:onClick="showDatePickerDialogArrival"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pack_label"
                    android:textColor="@color/golden_brown"
                    android:id="@+id/tripItemSelector"
                    android:textSize="@dimen/trip_text"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/button_margin"
                    android:layout_marginTop="@dimen/home_layout"
                    />

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/bus_width"
                    android:background="@drawable/trip_cash_editext"
                    android:layout_marginRight="@dimen/button_margin"
                    android:layout_marginTop="@dimen/button_margin"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:id  ="@+id/tripSelectBox"
                        android:layout_width="@dimen/badge_layout"
                        android:layout_height="@dimen/home_layout"
                        android:hint="Add Items"
                        android:textColor="@color/white"
                        android:textSize="@dimen/badge_margin"
                        android:padding="@dimen/layout_margin_small"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:layout_marginLeft="@dimen/layout_margin_small"
                        android:layout_marginTop="@dimen/trip_padding_left"

                        />



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remind me at:"
                    android:textColor="@color/golden_brown"
                    android:textSize="@dimen/trip_text"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/button_margin"
                    android:layout_marginTop="@dimen/home_layout"
                    />

                <TextView
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/bus_width"
                    android:hint="Trip Time"
                    android:paddingLeft="@dimen/trip_padding_left"
                    android:textSize="@dimen/badge_margin"
                    android:paddingTop="@dimen/layout_margin"
                    android:paddingBottom="@dimen/layout_margin_small"
                    android:textColor="@color/white"
                    android:background="@drawable/trip_cash_editext"
                    android:id="@+id/trip_time"
                    android:clickable="true"
                    android:onClick="showTimePickerDialogDeparture"
                    android:layout_marginLeft="@dimen/trip_padding_left"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:layout_marginTop="@dimen/button_margin"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <Button
                android:layout_width="@dimen/trip_layout_width"
                android:layout_height="wrap_content"
                android:background="@drawable/info_hub_button"
                android:layout_gravity="center_horizontal"
                android:text="@string/trip_button_label"
                android:textColor="@color/white"
                android:id="@+id/generateButton"
                android:layout_marginBottom="@dimen/button_margin"
                android:layout_below="@+id/scrollSegmentTrip"
                android:layout_centerHorizontal="true" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            android:layout_height="@dimen/view_layout_height"
            android:layout_width="@dimen/view_layout_width"
            android:background="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/layout_margin"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/layout_margin"
            android:paddingBottom="@dimen/layout_margin_small">

            <Button
                android:id="@+id/homeButton"
                android:background="@drawable/home_icon_normal"
                android:layout_width="@dimen/home_layout"
                android:layout_height="@dimen/home_layout"
                android:adjustViewBounds="true"
                android:layout_marginRight="@dimen/badge_margin"
                android:scaleType="fitCenter"/>

            <Button
                android:background="@drawable/bus_icon_inactive_normal"
                android:layout_width="@dimen/bus_width"
                android:layout_height="@dimen/home_layout"
                android:adjustViewBounds="true"
                android:layout_marginLeft="@dimen/layout_margin_small"
                android:layout_marginRight="@dimen/layout_margin_small"
                android:scaleType="fitCenter"
                android:id="@+id/tripButton"

                />

            <Button
                android:background="@drawable/info_hub_inactive_normal"
                android:id="@+id/infoButton"
                android:layout_width="@dimen/home_layout"
                android:layout_height="@dimen/home_layout"
                android:adjustViewBounds="true"
                android:layout_marginLeft="@dimen/badge_margin"
                android:scaleType="fitCenter"
                />
            <Button
                android:background="@drawable/cal_right_arrow_brown"
                android:id="@+id/tempButton"
                android:layout_width="@dimen/arrow_layout"
                android:layout_height="@dimen/arrow_layout"
                android:adjustViewBounds="true"
                android:layout_marginLeft="@dimen/badge_margin"
                android:scaleType="fitCenter"
                />
            <Button
                android:background="@drawable/user"
                android:id="@+id/userProfile"
                android:layout_width="@dimen/user_layout"
                android:layout_height="@dimen/user_layout"
                android:adjustViewBounds="true"
                android:layout_marginLeft="@dimen/layout_margin"
                android:scaleType="fitCenter"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>