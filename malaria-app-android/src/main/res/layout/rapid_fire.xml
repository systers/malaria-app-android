<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relatively"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground"
    android:orientation="vertical"
    android:weightSum="1" >
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.90"
        android:orientation="vertical"
        android:weightSum="1" >
        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:orientation="vertical"
            android:weightSum="1" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/layout_margin_small"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Score :"
                    android:textColor="@color/golden_brown"
                    android:textSize="@dimen/textSize_medium2"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/timers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="49"
                    android:textColor="@color/golden_brown"
                    android:textSize="@dimen/textSize_medium2"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:orientation="vertical"
            android:weightSum="1" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/txtQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/layout_margin_small"
                    android:gravity="center"
                    android:text="15*2*1-1"
                    android:textColor="@color/golden_brown"
                    android:textSize="@dimen/textSize_medium2"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:orientation="vertical"
                android:padding="@dimen/layout_margin_small"
                android:gravity="center_horizontal"
                android:weightSum="1" >
                <Button
                    android:id="@+id/button1"
                    android:layout_width="@dimen/view_layout_width"
                    android:layout_height="@dimen/rapid_layout_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/layout_margin_small"
                    android:background="@drawable/info_hub_button"
                    android:gravity="center"
                    android:text="30"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_small"
                    android:enabled="true"
                    android:clickable="true"/>
                <Button
                    android:id="@+id/button2"
                    android:layout_width="@dimen/view_layout_width"
                    android:layout_height="@dimen/rapid_layout_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/layout_margin_small"
                    android:background="@drawable/info_hub_button"
                    android:gravity="center"
                    android:text="29"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_small"
                    android:enabled="true"
                    android:clickable="true"/>
                <Button
                    android:id="@+id/button3"
                    android:layout_width="@dimen/view_layout_width"
                    android:layout_height="@dimen/rapid_layout_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/layout_margin_small"
                    android:background="@drawable/info_hub_button"
                    android:gravity="center"
                    android:text="32"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_small"
                    android:enabled="true"
                    android:clickable="true"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/rapid_layout_height"
            android:text="Exit Game"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/info_hub_button"
            android:textColor="@color/white"
            android:layout_margin="@dimen/layout_margin"
            android:paddingRight="@dimen/info_padding"
            android:paddingLeft="@dimen/info_padding"
            android:textSize="@dimen/textSize_small"
            android:onClick="exitGame"/>
    </LinearLayout>
</LinearLayout>