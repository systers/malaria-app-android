<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="2dp">

    <Button
        android:id="@+id/fragment_second_screen_settings_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:background="@drawable/settings_normal"
        android:scaleType="fitCenter" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/firstMonthProgressLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:maxLines="1"
            android:text="January"
            android:textColor="@color/golden_brown"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="2">

            <ProgressBar
                android:id="@+id/firstMonthProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/progress_bg"
                android:onClick="sendMonth"
                android:progress="100"
                android:progressDrawable="@drawable/saf_progress_bar" />

            <TextView
                android:id="@+id/firstMonthProgressPercent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="2.7"
                android:maxLines="1"
                android:text="100%"
                android:textColor="@color/golden_brown"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/secondMonthProgressLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:maxLines="1"
            android:text="February"
            android:textColor="@color/golden_brown"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="2">

            <ProgressBar
                android:id="@+id/secondMonthProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/progress_bg"
                android:onClick="sendMonth"
                android:progress="60"
                android:progressDrawable="@drawable/saf_progress_bar"

                />

            <TextView
                android:id="@+id/secondMonthProgressPercent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="2.7"
                android:maxLines="1"
                android:text="60%"
                android:textColor="@color/golden_brown"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/thirdMonthProgressLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:maxLines="1"
            android:text="March"
            android:textColor="@color/golden_brown"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="2">

            <ProgressBar
                android:id="@+id/thirdMonthProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/progress_bg"
                android:onClick="sendMonth"
                android:progress="80"
                android:progressDrawable="@drawable/saf_progress_bar" />

            <TextView
                android:id="@+id/thirdMonthProgressPercent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="2.7"
                android:maxLines="1"
                android:text="80%"
                android:textColor="@color/golden_brown"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fourthMonthProgressLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="April"
            android:textColor="@color/golden_brown"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="2">

            <ProgressBar
                android:id="@+id/fourthMonthProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/progress_bg"
                android:onClick="sendMonth"
                android:progress="80"
                android:progressDrawable="@drawable/saf_progress_bar"

                />

            <TextView
                android:id="@+id/fourthMonthProgressPercent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="2.7"
                android:maxLines="1"
                android:text="80%"
                android:textColor="@color/golden_brown"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/graphView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/graph_bg"
        android:orientation="vertical">

    </LinearLayout>


</LinearLayout>