<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TableRow>
        <Button
            android:id="@+id/infoDrug"
            android:layout_width="@dimen/button_margin"
            android:layout_height="@dimen/button_margin"
            android:layout_marginTop="@dimen/trip_margin"
            android:layout_marginLeft="@dimen/trip_margin"
            android:background="@drawable/info_hub_normal"
            android:focusable="false"/>

        <TextView
            android:id="@+id/nameDrug"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bus_width"
            android:textColor="@color/golden_brown"
            android:textSize="@dimen/user_medicine_button_margin_top"
            android:padding="@dimen/layout_margin"/>

    </TableRow>
</TableLayout>
