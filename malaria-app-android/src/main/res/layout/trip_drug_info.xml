<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TableRow>
        <Button
            android:id="@+id/infoDrug"
            android:layout_width="@dimen/trip_dialog_info_button_width"
            android:layout_height="@dimen/trip_dialog_info_button_height"
            android:layout_marginTop="@dimen/trip_dialog_info_button_margintop"
            android:background="@drawable/info_hub_normal"
            android:focusable="false"/>

        <TextView
            android:id="@+id/nameDrug"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/trip_dialog_info_tv_height"
            android:textColor="@color/golden_brown"
            android:textSize="@dimen/trip_dialog_info_tv_textsize"
            android:padding="@dimen/trip_dialog_info_tv_padding"/>

    </TableRow>
</TableLayout>
