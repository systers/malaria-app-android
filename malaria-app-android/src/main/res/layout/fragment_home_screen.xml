<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_screen_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="2dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="@dimen/padding_2dp">

                <LinearLayout
                    android:id="@+id/warningView"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_25dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="@dimen/size_24dp"
                        android:layout_height="@dimen/size_24dp"
                        android:background="@drawable/warning"
                        android:contentDescription="@string/description_warning" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_25dp"
                        android:gravity="bottom"
                        android:paddingBottom="@dimen/padding_2dp"
                        android:text="You may be running out of medicines soon! "
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/fragment_home_screen_set_tone_button"
                    android:layout_width="@dimen/size_24dp"
                    android:layout_height="@dimen/size_24dp"
                    android:layout_margin="@dimen/margin_5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ic_action_volume_on"
                    android:scaleType="fitCenter" />

                <Button
                    android:id="@+id/fragment_home_screen_settings_button"
                    android:layout_width="@dimen/size_24dp"
                    android:layout_height="@dimen/size_24dp"
                    android:layout_margin="@dimen/margin_5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/settings_normal"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <TextView
                android:id="@+id/fragment_home_screen_current_day_of_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_size_40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_home_screen_current_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/margin_30dp"
                android:scaleType="fitCenter"
                android:textSize="@dimen/text_size_20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/size_140dp"
                android:layout_height="@dimen/size_140dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/drug_normal"
                android:contentDescription="@string/description_med_status"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fragment_home_screen__reject_medication_button"
                    android:layout_width="@dimen/size_70dp"
                    android:layout_height="@dimen/size_70dp"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/reject_medi_normal" />

                <Button
                    android:id="@+id/fragment_home_screen_accept_medication_button"
                    android:layout_width="@dimen/size_70dp"
                    android:layout_height="@dimen/size_70dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/accept_medi_normal"
                    android:scaleType="fitCenter" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>